    @@keyframes spinner {
        to {
            transform: scale(1.1)
        }
    }

    .rz-dialog-mask {
        background: #333;
        opacity: 1;
    }

    .rz-dialog-wrapper {
        z-index: 5000 !important;
    }

        .rz-dialog-wrapper .rz-dialog {
            max-height: 50px;
